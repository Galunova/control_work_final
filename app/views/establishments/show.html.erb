<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @establishment.title %></h1>
    <p><%= @establishment.description %></p>
    <%= image_tag @establishment.image(:thumb)%>

    <div class="col-md-6 ">
      <% if user_signed_in? %>
        <div >
          <h3>Add review</h3>
          <%= form_for [@establishment, @establishment.reviews.build] do |f| %>
              <%= f.input :text, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{@establishment.id}" %>
              <%= f.input :feed_rate, collection: 1..5 %>
              <%= f.input :service_rate, collection: 1..5 %>
              <%= f.input :atmosphere_rate, collection: 1..5 %>
              <%= f.input :review_comment %>
              <%= f.submit %>
          <% end %>
        </div>
      <% end %>
      
      </div>
  </div>
</div>