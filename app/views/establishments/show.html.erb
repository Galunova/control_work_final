<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @establishment.title %></h1>
    <p><%= @establishment.description %></p>
    <%= image_tag(@establishment.image_url(:full)) if @establishment.image? %>
    
    <div class="col-md-6 ">
      <% if user_signed_in? %>
        <div >
          <h3>Add review</h3>
          <%= form_for [@establishment, @establishment.reviews.build] do |f| %>
              <div class="form-group">
                <%= f.label :feed_rate, class: 'control-label' %>
                <%= f.number_field :feed_rate, step: :any, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :service_rate, class: 'control-label' %>
                <%= f.number_field :service_rate, step: :any, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :atmosphere_rate, class: 'control-label' %>
                <%= f.number_field :atmosphere_rate, step: :any, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :review_comment, class: 'control-label' %>
                <%= f.text_field :review_comment, class: 'form-control' %>
              </div>
              
              <%= f.submit %>
          <% end %>
        </div>
      <% end %>
      </div>
  </div>
</div>
